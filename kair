import docx
from fuzzywuzzy import fuzz
import Levenshtein
import logging
import time

def mes_time(func, *args, **kwargs):
    start = time.perf_counter()
    result = func(*args, **kwargs)
    end = time.perf_counter()
    return result, end - start

def levenstein(str_1, str_2):
    n, m = len(str_1), len(str_2)
    if n > m:
        str_1, str_2 = str_2, str_1
        n, m = m, n

    current_row = range(n + 1)
    for i in range(1, m + 1):
        previous_row, current_row = current_row, [i] + [0] * n
        for j in range(1, n + 1):
            add, delete, change = previous_row[j] + 1, current_row[j - 1] + 1, previous_row[j - 1]
            if str_1[j - 1] != str_2[i - 1]:
                change += 1
            current_row[j] = min(add, delete, change)

    return current_row[n]

logging.basicConfig(filename='app.log', filemode='w', level=logging.INFO)

str1 = docx.Document('Doc1.docx')
str2 = docx.Document('Doc2.docx')

for paragraph in str1.paragraphs:
    str1 = paragraph.text

for paragraph in str2.paragraphs:
    str2 = paragraph.text

#fuzzy
res, t = mes_time(fuzz.ratio, str1, str2)
print(res)
logging.info(f'Функция fuzz.ratio выполнена за {t}')

#левинштейн в процентах
res, t = mes_time(Levenshtein.ratio, str1, str2)
print(res * 100)
logging.info(f'Функция fuzz.ratio выполнена за {t}')

#расстояние левинштейна
res, t = mes_time(Levenshtein.distance, str1, str2)
print(res)
logging.info(f'Функция fuzz.ratio выполнена за {t}')

res, t = mes_time(levenstein, str1, str2)
print(res)
logging.info(f'Функция levenstein (не через библиотеку) выполнена за {t}')
